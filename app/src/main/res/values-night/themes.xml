<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TableTaskApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.TableTaskApp" parent="Base.Theme.TableTaskApp" />

    <style name="NormalTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BackgroundStyle">
        <item name="android:background">@drawable/rounded_black_background</item>
    </style>
</resources>